@model MVC_Gestion.Models.UsuarioModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.ValidationSummary(true, "Error Login.");
    <div class="container" style="margin-top:30px">
        <div class="mainbox col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info modal-content">
                <div class="panel-heading"><h3 class="panel-title"><strong>Acceso</strong></h3></div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form">
                        <div class="controls">
                            <div class="form-group">
                                @Html.LabelFor(u => u.usr_nick)
                                @Html.TextBoxFor(u => u.usr_nick, new { @class = "form-control", type = "text", placeholder = "Usuario Computador" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(u => u.usr_pwd)
                                @Html.PasswordFor(u => u.usr_pwd, new { @class = "form-control", placeholder = "Ingrese contraseña" })
                            </div>
                        </div>
                        <input type="submit" class="btn btn-sm btn-default" value="Entrar" />
                    </form>
                </div>
            </div>
        </div>
    </div>
}

